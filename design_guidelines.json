{
  "identity": {
    "name": "NeuroSense AI",
    "persona": "E1: The Anti-AI Designer",
    "tone": "Futuristic, Clinical, Precision, Biocybernetic",
    "principles": [
      "Fusion over Imitation: Mix Medical Imaging with Cyberpunk HUDs.",
      "Emotion First: Trust (Dark/Stable) + Urgency (Neon Alerts).",
      "Content is King: Data is the art. Visualize it beautifully.",
      "Zoom In: Focus on micro-interactions and data granularity.",
      "Negative Space: Use deep black voids to make neon pop."
    ]
  },
  "typography": {
    "fonts": {
      "heading": {
        "family": "Outfit",
        "weights": ["400", "600", "800"],
        "usage": "Headings, Hero Text, Big Numbers",
        "fallback": "sans-serif"
      },
      "body": {
        "family": "Plus Jakarta Sans",
        "weights": ["400", "500", "700"],
        "usage": "Paragraphs, UI Labels, Navigation",
        "fallback": "sans-serif"
      },
      "mono": {
        "family": "JetBrains Mono",
        "weights": ["400"],
        "usage": "Data Tables, Code Snippets, Coordinates",
        "fallback": "monospace"
      }
    },
    "rules": [
      "NEVER use Inter for headings.",
      "Headings > 32px must use tracking-tight.",
      "Overlines must be Uppercase + tracking-widest + text-xs.",
      "Use font-light for large display text to feel elegant/tech."
    ]
  },
  "colors": {
    "palette": {
      "background": {
        "default": "#030712",
        "paper": "#0B0F19",
        "subtle": "#111827"
      },
      "primary": {
        "main": "#00F0FF",
        "glow": "0 0 20px rgba(0, 240, 255, 0.5)",
        "text": "#000000"
      },
      "secondary": {
        "main": "#7C3AED",
        "glow": "0 0 20px rgba(124, 58, 237, 0.5)"
      },
      "accent": {
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#3B82F6"
      },
      "text": {
        "primary": "#F9FAFB",
        "secondary": "#9CA3AF",
        "muted": "#4B5563"
      }
    },
    "gradients": {
      "hero": "linear-gradient(135deg, #030712 0%, #111827 100%)",
      "glass": "linear-gradient(180deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.01) 100%)",
      "beam": "linear-gradient(90deg, transparent, #00F0FF, transparent)"
    },
    "rules": [
      "NO generic full-screen gradients.",
      "Use gradients only for borders, text clips, or subtle glows.",
      "Backgrounds must be deep black/gray, not pure black (#000000) unless for OLED contrast.",
      "FORBIDDEN: Teal Green (#1B93A4) for dashboards."
    ]
  },
  "layout": {
    "spacing_scale": "Generous (2x standard). Use p-8, p-12 for sections.",
    "radius": {
      "default": "0.5rem",
      "card": "1rem",
      "button": "9999px"
    },
    "grids": {
      "marketing": {
        "name": "The Tetris Grid",
        "classes": "grid grid-cols-1 md:grid-cols-12 gap-8",
        "rules": "Asymmetry is key. Mix col-span-8 with col-span-4."
      },
      "dashboard": {
        "name": "The Control Room",
        "classes": "grid grid-cols-1 md:grid-cols-4 gap-4",
        "rules": "Dense. No gaps. Use h-full to stretch widgets."
      }
    }
  },
  "components": {
    "cards": {
      "style": "Glassmorphism",
      "classes": "bg-black/40 backdrop-blur-xl border border-white/10 shadow-2xl",
      "hover": "hover:border-primary/50 transition-colors duration-300"
    },
    "buttons": {
      "primary": "bg-primary text-black font-bold hover:shadow-[0_0_20px_rgba(0,240,255,0.4)] transition-all",
      "secondary": "bg-white/5 border border-white/10 hover:bg-white/10 text-white"
    },
    "inputs": {
      "style": "Neo-Brutalist Tech",
      "classes": "bg-black/50 border-white/20 focus:border-primary focus:ring-1 focus:ring-primary"
    },
    "charts": {
      "library": "Recharts (via Shadcn)",
      "style": "Holographic",
      "rules": "Use strokeWidth={2}. Add drop-shadow filter to lines. Hide grid lines or make them extremely subtle (opacity 0.1)."
    }
  },
  "assets": {
    "icons": {
      "primary": "lucide-react",
      "secondary": "@phosphor-icons/react (Duotone for marketing)",
      "installation": "yarn add lucide-react @phosphor-icons/react"
    },
    "images": {
      "hero_brain": {
